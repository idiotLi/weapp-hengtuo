.container {
    padding: 8px;
}
.title {
    font-weight: bold;
    font-size: 18px;
    padding: 0 0 8px 0;
}
.container-tabs {
    padding: 8px;
    background-color: whitesmoke;
}
.tabs {
    padding: 0 8px;
    background-color: #fff;
    border-radius: 12px;
}
.tabs scroll-view {
    border-radius: 12px;
}
.tab-content {
    padding: 16px 0;
    display: flex;
    justify-content: center;
    align-items: center;
}
.tab-item {
    display: flex;
    flex: 1;
    flex-direction: column;
    align-items: center;
}
.tab-item .value {
    font-weight: bold;
    font-size: 20px;
}
.tab-item .label {
    background-color: whitesmoke;
    color: #333;
    padding: 4px 12px;
    margin: 4px 0;
    border-radius: 4px;
    font-size: 11px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    
}
.tab-item .sublabel {
    display: flex;
    align-items: center;
    font-size: 12px;
    color: #aaa;
}
.tab-item .subvalue {
    font-size: 12px;
}
.tab-chart {
    padding: 16px;
    position: relative;
}
ec-canvas {
    width: 100%;
    height: 100%;
}
.ec-order {
    width: 100%;
    padding: 0 0 6px 0;
    height: 200px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    position: relative;
}
.ec-order-title {
    font-weight: bold;
    font-size: 18px;
    position: absolute;
    top: 0;
    left: 0;
}
.tab-chart-user,.tab-chart-article,.tab-chart-comment {
    width: 100%;
    height: 200px;
}
.ec-title {
    padding: 16px 0 0 16px;
    font-weight: bold;
    font-size: 16px;
}
.todo {
    --info-font-size: 9px;
}
.achieve {
    height: 100px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #fff;
}
.achieve .order,
.achieve .sale,
.achieve .profit,
.global .visitor,
.global .order,
.global .sale {
    position: relative;
    height: 100%;
    border-radius: 4px;
    width: 32%;
}

.achieve .order {
    background-color: var(--color-primary);
}

.achieve .sale {
    background-color: var(--color-dark);
}

.achieve .profit {
    background-color: var(--color-info);
}
.global {
    height: 80px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.global .visitor {
    background-color: var(--color-whitesmoke);
}
.global .order {
    background-color: var(--color-whitesmoke);
}
.global .sale {
    background-color: var(--color-whitesmoke);
}

.achieve .count,.global .count {
    font-size: 22px;
    font-weight: bold;
    position: absolute;
    right: 10px;
    bottom: 10px;
}
.achieve .money,.global .money {
    font-size: 22px;
    font-weight: bold;
    position: absolute;
    right: 10px;
    bottom: 10px;
}
.money::before {
    content: "$";
    margin-right: 2px;
    font-weight: normal;
    font-size: 14px;
}

.achieve .label,.global .label {
    font-size: 14px;
    position: absolute;
    top: 10px;
    left: 10px;
    text-align: center;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: start;
}

.achieve .label .icon,.global .label .icon  {
    margin-right: 4px;
}

/* banner的样式 */
.banner-warpper {
    background-color: #f5f5f5;
}

.banner {
    width: auto;
    margin: 0 10rpx 10px 10px;
    border-top-right-radius: 10px;
    border-top-left-radius: 10px;
    height: 60px;
    background: rgb(34, 52, 70);
    background: linear-gradient(133deg, rgba(34, 52, 70, 1) 35%, rgba(44, 62, 80, 1) 100%);
    box-shadow: 0 10px 10px var(--color-dark);
    display: flex;
    justify-content: center;
    align-items: center;
}


.banner .left {
    padding-left: 10px;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    /* text-align: center; */
}

.banner .mid {
    padding-left: 20px;
    flex: 3;
    display: flex;
    flex-direction: column;
    justify-content: center;
    /* text-align: center; */
}

.banner .mid .nickname {

    color: #fff;
    font-size: 16px;
    font-weight: bold;
}

.banner .mid .group {
    color: #aaa;
    font-size: 10px;
    padding-top: 4px;
}
.banner .right {
    flex: 2;
    display: flex;
    justify-content: center;
}

/* mytool部分的样式 */
.mytool {
    display: flex;
    padding: 20px 80rpx;
}
.mytool .item1 {
    flex: 1;
    padding-right: 15px;
}
.mytool .item2 {
    flex: 1;
    padding-left: 15px;
}