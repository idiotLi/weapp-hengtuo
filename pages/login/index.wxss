page  {
    background-image: linear-gradient(120deg, #fdfbfb 0%, #ebedee 100%);
}
.container {
    height: 100%;
    margin: 0 80rpx;
    box-sizing: border-box;
}

.logo {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 240rpx 0 40rpx 0;
}

.logo i {
    color: var(--color-primary);
}

.site-name {
    text-align: center;
    font-size: 20px;
    margin-bottom: 160rpx;
}

.loading {
    text-align: center;
}

.btn-wechat,
.btn-mobile,
.btn-username {
    margin-top: 20rpx;
}

.text-tips {
    font-size: 12px;
    margin-top: 40rpx;
}

.bold {
    margin-top: 20rpx;
}

/* 覆盖toxml解析后的样式 */
.h2w {
    line-height: 1.1 !important;
    background-color: transparent !important;
}

.h2w__main {
    margin: 0 !important;
    padding-top: 0 !important;
}

.version {
    width: 100%;
    padding-bottom: env(safe-area-inset-bottom);
    text-align: center;
    position: absolute;
    bottom: 6px;
    color: gray;
    font-size: 11px;
}