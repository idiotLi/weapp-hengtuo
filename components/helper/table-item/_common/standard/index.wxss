@import '../../../../vant/common/index.wxss';

.list-cell {
    display: flex;
    text-align: left;
    width: 100%;
    margin-top: 4px;
}

.table-item {
    display: flex;
}

.table-item__image {
    margin-top: 6px;
    margin-right: 16px;
}

.table-item__id {
    font-size: 10px;
    text-align: center;
    color: gray;
}

.table-item-main {
    width: 100%;
}

.table-item__title {
    display: flex;
}

.table-item__title .title {
    text-align: left;
    font-weight: bold;
    padding-bottom: 6px;
}

.table-item__title .status {
    position: absolute;
    right: 0;
}

.table-item-detail {
    margin-top: 8px;
    font-size: 11px;
}

.table-item__item {
    display: flex;
}

.table-item__item .label {
    color: gray;
    text-align: left;
    flex: 1;
}

.table-item__item .value {
    text-align: left;
    margin-left: 4px;
    flex: 2;
    word-break: break-all;
}

.table-item__item .value .flag {
    margin-left: 4px;
}